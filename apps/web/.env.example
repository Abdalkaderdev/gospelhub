# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Gospel Hub
NEXT_PUBLIC_APP_VERSION=1.0.0

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ORG=
NEXT_PUBLIC_SENTRY_PROJECT=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PWA_INSTALL=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_CACHE_TTL=3600

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=Gospel Hub
NEXT_PUBLIC_PWA_SHORT_NAME=Gospel Hub
NEXT_PUBLIC_PWA_DESCRIPTION=A comprehensive Bible reading app with spiritual growth tools
NEXT_PUBLIC_PWA_THEME_COLOR=#10b981
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff